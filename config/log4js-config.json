{
    "appenders": {
      "file": {
        "type": "file",
        "filename": "logs/application.log",
        "maxLogSize": 10485760,
        "pattern": "-yyyy-MM-dd",
        "backups": 3,
        "compress": true
      }
    },
    "categories": {
      "default": {
        "appenders": ["file"],
        "level": "debug"
      }
    }
  }